<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marin_10"
        android:layout_marginRight="@dimen/marin_10"
        android:layout_marginTop="@dimen/marin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mstarttimeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:background="@drawable/bg_background"
            android:drawableLeft="@drawable/a_time"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="请选择起始时间"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/base_river_left" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="至"
            android:textSize="@dimen/base_river_left" />

        <TextView
            android:id="@+id/mendtimeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_background"
            android:drawableLeft="@drawable/a_time"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="请选择结束时间"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/base_river_left" />





    </LinearLayout>

    <TextView
        android:id="@+id/searchTv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_bt_start_yunwei"
        android:gravity="center"
        android:letterSpacing="0.5"
        android:text="开 始 查 询"
        android:textColor="@color/white_my"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>



