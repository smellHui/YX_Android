<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="68dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/tv_reservoir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginTop="11dp"
            android:text="xx水库"
            />

        <TextView
            android:id="@+id/tv_inspection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/tv_reservoir_name"
            android:layout_toRightOf="@+id/tv_reservoir_name"
            android:background="#68ABFA"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="建议巡查"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_below="@+id/tv_reservoir_name"
            android:layout_marginTop="2dp"
            android:text="直线距离：km"/>

        <TextView
            android:id="@+id/tv_date"
            android:text="距上次巡查3天"
            android:textColor="#68ABFA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_reservoir_name"
            android:layout_toRightOf="@+id/tv_distance"
            android:textSize="13sp"
            android:layout_toEndOf="@+id/tv_distance"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"/>

        <FrameLayout
            android:id="@+id/fl_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/ksxc_icon_map_dxc"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />
        </FrameLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp" />
</RelativeLayout>