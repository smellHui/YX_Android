<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:text="本组核查进展"
            android:textSize="22sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@color/background_common"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">


            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/bendipiechart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:background="@drawable/common_blue"
                        android:layout_width="@dimen/sizeoflabel"
                        android:layout_height="@dimen/sizeoflabel" />
                    <TextView
                        android:id="@+id/benzuDaihechaTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待核查"
                        android:textColor="@color/common_blue_new"
                        android:textSize="@dimen/hellocharsize" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:background="@drawable/common_green"
                        android:layout_width="@dimen/sizeoflabel"
                        android:layout_height="@dimen/sizeoflabel" />

                    <TextView


                        android:id="@+id/benzuDaiShangbaoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待上报"
                        android:textColor="@color/common_green"
                        android:textSize="@dimen/hellocharsize" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:background="@drawable/common_red"
                        android:layout_width="@dimen/sizeoflabel"
                        android:layout_height="@dimen/sizeoflabel" />

                    <TextView

                        android:id="@+id/benzuYihechaShangbaoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已核查上报"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/hellocharsize" />
                </LinearLayout>







            </LinearLayout>
        </LinearLayout>



        <TextView
            android:id="@+id/zhengtiTv"
            android:drawableRight="@drawable/main_lsit1"
            android:textColor="@color/black"
            android:text="整体核查进展"
            android:textSize="22sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:visibility="visible"
            android:background="@color/background_common"

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">


            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/zhengtipiechart"
                android:tag="zhengtipiechart"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2" />

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:background="@drawable/common_blue"
                        android:layout_width="@dimen/sizeoflabel"
                        android:layout_height="@dimen/sizeoflabel" />
                    <TextView
                        android:id="@+id/zhengtiDaihechaTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待核查"
                        android:textColor="@color/common_blue_new"
                        android:textSize="@dimen/hellocharsize" />
                </LinearLayout>

              <!--  <TextView
                    android:id="@+id/zhengtiDaihechaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待核查"
                    android:textColor="@color/common_blue"
                    android:textSize="@dimen/hellocharsize" />-->


                <LinearLayout
                    android:gravity="center_vertical"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:background="@drawable/common_red"
                        android:layout_width="@dimen/sizeoflabel"
                        android:layout_height="@dimen/sizeoflabel" />

                    <TextView

                        android:id="@+id/zhengtiYihechaTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已核查上报"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/hellocharsize" />
                </LinearLayout>
                <!--<TextView
                    android:id="@+id/zhengtiYihechaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已核查"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/hellocharsize" />-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
