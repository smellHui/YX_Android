<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootLy"
        android:background="@drawable/bg_worker_item_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/serialTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序列号"
            android:textColor="#434952"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="水库名称"
            android:maxLines="2"
            android:textColor="#434952"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/areaTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="乡镇"
            android:maxLines="2"
            android:textColor="#434952"
            android:textSize="12dp" />



        <TextView
            android:id="@+id/levelTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="级别"
            android:textColor="#434952"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/baTypeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="坝型"
            android:textColor="#434952"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/waterTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="库水位"
            android:textColor="@color/water_rz_color"
            android:textSize="12dp" />

    </LinearLayout>
</layout>
