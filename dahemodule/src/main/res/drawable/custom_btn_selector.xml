<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下去的背景颜色显示效果 -->
    <item android:drawable="@drawable/btn_grey_corner" android:state_pressed="true" />
    <!-- 获取焦点时背景颜色显示效果 -->
    <item android:drawable="@drawable/btn_grey_corner" android:state_focused="true" />
    <item android:drawable="@drawable/btn_grey_corner" android:state_enabled="false" />
    <!-- 没有任何状态下的背景颜色 -->
    <item android:drawable="@drawable/btn_corner" />

</selector>
